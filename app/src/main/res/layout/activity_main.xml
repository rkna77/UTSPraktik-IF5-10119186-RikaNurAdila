<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Pengisian Data"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>
        
        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:orientation="vertical"
            android:background="@drawable/img">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="13dp"
                android:text="Info"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="13dp"
                android:text="Form berikut ini bertujuan untuk memberikan informasi kepada pusat agar dapat mudah dilaporkan"
                android:fontFamily="@font/roboto"
                android:textColor="#81000000"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Tes"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Harus di isi"
                android:fontFamily="@font/roboto"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp">
                <RadioButton
                    android:id="@+id/r_rapid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapid Antigen"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
                <RadioButton
                    android:id="@+id/r_pcr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PCR"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Terkonfirmasi"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Harus di isi"
                android:fontFamily="@font/roboto"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/tgl_konfir"
                android:layout_width="392dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:layout_marginLeft="10dp"
                android:inputType="date"
                android:textSize="14sp"
                android:autofillHints="Pilih Tanggal"
                android:drawableRight="@drawable/kalender"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/nik"
                android:layout_width="392dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:textSize="14sp"
                android:autofillHints="Masukkan NIK"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan Nama"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Harus di isi"
                android:fontFamily="@font/roboto"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/nama"
                android:layout_width="392dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:textSize="14sp"
                android:autofillHints="Masukkan Nama"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Harus di isi"
                android:fontFamily="@font/roboto"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/tgl_lahir"
                android:layout_width="392dp"
                android:layout_height="40dp"
                android:background="@drawable/background"
                android:layout_marginLeft="10dp"
                android:inputType="date"
                android:textSize="14sp"
                android:autofillHints="Pilih Tanggal"
                android:drawableRight="@drawable/kalender"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Harus di isi"
                android:fontFamily="@font/roboto"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp">
                <RadioButton
                    android:id="@+id/cowo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
                <RadioButton
                    android:id="@+id/cewe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubungan Dengan Anda"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Harus di isi"
                android:fontFamily="@font/roboto"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp">
                <RadioButton
                    android:id="@+id/ortu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orangtua"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
                <RadioButton
                    android:id="@+id/nikah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suami/Istri"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
                <RadioButton
                    android:id="@+id/anak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anak"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
                <RadioButton
                    android:id="@+id/lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerabat Lainnya"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#9A000000"
                android:fontFamily="@font/roboto"
                android:text="Dengan ini saya menyetujui bahwa data yang saya isikan adalah benar"/>
        </LinearLayout>
        <Button
            android:id="@+id/selanjutnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"/>
    </LinearLayout>

</ScrollView>